local OP_AUTOFASTPUNCH = Instance.new("TextButton")
OP_AUTOFASTPUNCH.Name = "OP_AUTOFASTPUNCH"
OP_AUTOFASTPUNCH.Parent = Frame
OP_AUTOFASTPUNCH.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
OP_AUTOFASTPUNCH.BorderColor3 = Color3.fromRGB(0, 0, 0)
OP_AUTOFASTPUNCH.BorderSizePixel = 0
OP_AUTOFASTPUNCH.Position = UDim2.new(0.030837005, 0, 0.326975465, 0)
OP_AUTOFASTPUNCH.Size = UDim2.new(0, 200, 0, 38)
OP_AUTOFASTPUNCH.Font = Enum.Font.FredokaOne
OP_AUTOFASTPUNCH.Text = "OP AUTO FAST PUNCH"
OP_AUTOFASTPUNCH.TextColor3 = Color3.fromRGB(255, 255, 255)
OP_AUTOFASTPUNCH.TextScaled = true
OP_AUTOFASTPUNCH.TextSize = 14.000
OP_AUTOFASTPUNCH.TextWrapped = true

local punching = false
local pulse

-- Function to handle punching logic
local function punch()
    local args = {
        [1] = workspace:WaitForChild("Loaded"):WaitForChild("PunchingBags"):WaitForChild("PunchingBag")
    }
    game:GetService("ReplicatedStorage"):WaitForChild("Packages"):WaitForChild("Knit"):WaitForChild("Services"):WaitForChild("PunchService"):WaitForChild("RE"):WaitForChild("Train"):FireServer(unpack(args))
end

-- Connect the button to toggle the punching
OP_AUTOFASTPUNCH.MouseButton1Down:Connect(function()
    punching = not punching
    if punching then
        OP_AUTOFASTPUNCH.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
        pulse = game:GetService("RunService").Heartbeat:Connect(function()
            -- Repeated punch calls for fast punching
            for i = 1, 26 do
                -- Here we're calling the punch function 26 times rapidly
                punch()
            end
        end)
    else
        OP_AUTOFASTPUNCH.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
        if pulse then
            pulse:Disconnect()
            pulse = nil
        end
    end
end)
